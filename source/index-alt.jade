doctype html
html
    include includes/_head.jade
    
    body.hm--mod
        // HEADER
        header.header
            a.logo(href="#") 
                img.logo-image(src="assets/i/unmetric-logo-white.png" alt="Unmetric logo")
            


            a.menu-link(href="#")
                span.menu-icon
            
            
            form#search(action="#" method="post")
                #label
                    
                    label#search-label(for="search-terms") search
                    
                #input 
                    input(type="text" name="search-terms" id="search-terms" placeholder="Search...")
                
            nav.nav-main.0is-hidden
                ul.nav-main-wrap
                    
                    li 
                        a.more.nav-main--link(href="#") Products
                            i.icon-arrow-dropdown
                        

                        ul.nav-main-dd
                            li 
                                a.nav-main--link(href="javascript:void(0)") 
                                    span.menu-analyze Analyze
                                        i.icon-arrow-right.arrow-right
                                    br
                                    span.nav-main--desc Analytics for social media analysts
                                
                            li 
                                a.nav-main--link(href="javascript:void(0)") 
                                    span.menu-track Track
                                        i.icon-arrow-right.arrow-right
                                    br
                                    span.nav-main--desc Keep an eye on your competition
                                
                            li 
                                a.nav-main--link(href="javascript:void(0)") 
                                    span.menu-discover Discover
                                        i.icon-arrow-right.arrow-right
                                    br
                                    span.nav-main--desc Find inspiration to create content

                    
                    li: a.nav-main--link(href="javascript:void(0)") About
                    
                    li: a.nav-main--link(href="javascript:void(0)") Contact
                    
                    li: a.nav-main--link(href="javascript:void(0)") Sign In
                    
                    li: a.nav-main--link(href="javascript:void(0)") 
                        button.btn.btn-secondary.t-weight--m LOGIN
                    
        
    
                
        section.hero.row.u-pad--top-less.is-tall.0is-hidden
            .content.t-center
                h1.hero-title Out-market Your Competition 
                
                .col-4
                    p.t-white.hero-copy.t-weight--book Thousands of real-time marketers at hundreds of leading brands and agencies across 20+ countries use Unmetric to compete and win.
                
                
                .t-center.is-hidden
                    p.hero-meet--intro
                        
                        img.arrow-product--left(src="assets/i/left-arrow.svg" alt="#") 
                        
                        span.hero-intro.t-weight--m MEET OUR PRODUCTS
                        
                        img.arrow-product--right(src="assets/i/right-arrow.svg" alt="#") 
                        
                        
                
                .grid.grid--gutter
                    .box.hero-list--item
                        a.box-link.hero-list--link
                            
                            h3.hero-list--heading Analysts & Strategists
                            p.t-white Analyze your competition&rsquo;s content and campaign in depth.
                            
                            span.btn.btn-small.btn-primary.t-weight--m Learn more about Analyze
                                i.icon-arrow-right
                            
                            
                           
                    .box.hero-list--item
                        a.box-link.hero-list--link   
                            
                            h3.hero-list--heading Brand Managers
                            p.t-white Track your competitors&rsquo; media marketing in real time.
                            
                            span.btn.btn-small.btn-primary.t-weight--m Learn more about Track
                                i.icon-arrow-right
                                
                    
                    .box.hero-list--item
                        a.box-link.hero-list--link   
                            
                            h3.hero-list--heading Content Creators
                            p.t-white Discover ideas and inspiration to create engaging social content
                            
                            span.btn.btn-primary.t-weight--m.btn-small Learn more about Discover
                                i.icon-arrow-right
                    
        .row.group.logos
            .logo-list-wrap
                ul.logo-list
                    li.logo-list-item.logo-list-item--gm.logo-list-c
                        span GM

                    li.logo-list-item.logo-list-item--ls.logo-list-c
